    <button class="px-3 py-1 mx-1 text-gray-700" (click)="goToPage(currentPage - 1)" [disabled]="currentPage === 1">&lt;</button>
    <span class="px-3 py-1 mx-1 text-gray-700">{{ currentPage }}</span>
    <button class="px-3 py-1 mx-1 text-gray-700" (click)="goToPage(currentPage + 1)">&gt;</button>
    <button class="px-3 py-1 mx-1 text-gray-700" (click)="goToPage(Math.ceil(filteredUsers.length / itemsPerPage))">&gt;&gt;</button>
